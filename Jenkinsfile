pipeline {

    agent none

    stages {

        stage('build') {

            steps {
                echo 'building application spring-boot-kubernetes'
            }
        }

        stage('test') {

            steps {
                echo 'testing application spring-boot-kubernetes'
            }
        }

        stage('deploy') {

            steps {
                echo 'deploying application spring-boot-kubernetes'
            }
        }
    }
}
